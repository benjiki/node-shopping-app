<%- include('../include/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css" />
    </head>

    <body>
        <header class="main-header">
            <%- include('../include/navigation.ejs') %>
        </header>

        <main>
            <% if (prods.length> 0) { %>
                <div class="grid">
                    <% for(let products of prods ) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title">
                                    <%= products.title %>
                                </h1>
                            </header>
                            <div class="card__image">
                                <img src="<%= products.imageUrl %>" alt="<%= products.imageUrl %>" />
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">$<%= products.price %>
                                </h2>
                                <p class="product__description">
                                    <%= products.description %>
                                </p>
                            </div>
                            <div class="card__actions">
                                <a href="/admin/edit-product/<%= products.id %>?edit=true"
                                    style="padding-top:5px; padding-left: 10px; padding-right: 10px; padding-bottom: 5px;"
                                    class="btn">Edit</a>
                                <form action="/admin/delete-product" method="post">
                                    <button class="btn" type="submit">Delete</button>
                                </form>

                            </div>
                        </article>
                        <%} %>
                </div>
                <% } else {%>
                    <h2>No products found.</h2>
                    <%} %>
        </main>
        <%- include('../include/end.ejs') %>